// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tag {
  tagId        String     @id @default(uuid()) @map("tag_id")
  name     String   @db.VarChar(255)
  groupTagSubscription GroupTagSubscription[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model GroupTagSubscription {
  groupTagSubscriptionId  String @id @default(uuid()) @map("group_tag_subscription_id")
  groupId        String
  tagId        String
  group Group @relation(fields: [groupId], references: [groupId])
  tag Tag @relation(fields: [tagId], references: [tagId])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Group {
  groupId        String     @id @default(uuid()) @map("group_id")
  name     String   @db.VarChar(255)
  groupTagSubscription GroupTagSubscription[]
  description     String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  imgPath String @db.VarChar(1000)
}

model dumbModel{
  dumbModelId String @id @default(uuid()) @map("dumbModel_id")
  dumbName  String  @db.VarChar(1000)
}

model Mass {
  massId String @id @default(uuid()) @map("mass_id")
  isWeekly Boolean @db.Boolean
  title String @db.VarChar(255)
  date String @db.VarChar(255)
  content String? @db.VarChar(1000)
}
